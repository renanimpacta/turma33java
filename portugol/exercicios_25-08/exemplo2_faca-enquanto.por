programa
{
	
	funcao inicio()
	{
		//variáveis
		inteiro x, acm=0

		faca{
			escreva("Entre com um valor: ")
			leia(x)
			acm = acm + x
		}
		enquanto (x!=0)
		escreva("Eu acumulei: "+acm)
	}
}
